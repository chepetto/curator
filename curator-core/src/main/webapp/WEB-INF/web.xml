<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <distributable/>

    <filter>
        <filter-name>BridgeFilter</filter-name>
        <filter-class>org.curator.core.request.RequestPropertyBridgeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>BridgeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>WebFragmentCachingFilter</filter-name>
        <filter-class>org.curator.common.cache.WebFragmentCachingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>WebFragmentCachingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
